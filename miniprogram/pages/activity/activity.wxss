/* pages/create/create.wxss */

.container{
  width: 675rpx;
  height: 95%;
  padding: 20px;
  font-size: 25rpx;
  background-color: #ededed;
  }

.create_activity{
  padding: 20rpx;
  display: flex;
  flex-wrap: wrap;
  background-color: #ffffff;
}

.create_activity .activity{
  width: 100%; 
  display: flex;
  color: #000000;
  border-bottom: 1rpx solid #eaeaea;
}

.create_activity .info_name{
  width: 20%;
  height: 50rpx;
  padding-top: 8rpx;
  color: #000000;
}

.create_activity .info_desc{
  width: 75%;
  height: 50rpx;
  color: #000000;
}

.comments{
  width: 100%; 
  height: 100rpx;
  display: flex;
  vertical-align: middle;
  border-bottom: 1rpx solid #eaeaea;
}

.create_activity .info_long{
  width: 75%;
  height: 250rpx;
  color: #000000;
  padding-top: 8rpx;
}

.date_picker{
  width: 75%;
  height: 50rpx;
  color: #000000;
  padding-top: 8rpx;
}

.submit-button{
  height: 80rpx;
  width:600rpx;
  margin: 20rpx;
  background-color: #fc6121;
  align-self: center;
  font-size: 10 rpx;
}

.enroll{
  width: 100%; 
  height: 350rpx;
  display: flex;
  vertical-align: middle;
  border-bottom: 1rpx solid #eaeaea;
}

.create_activity .enroll_list{
  width: 100%;
  height: 350rpx;
  color: #000000;
  padding-top: 8rpx;
  display: flex;
  flex-wrap: wrap;
  align-content: flex-start;
}

.one_person{
  width: 60rpx;
  height: 80rpx;
  padding: 8rpx;
}

.avatar{
  width: 60rpx;
  height: 60rpx; 
}

.name{
  width: 60rpx;
  height: 20rpx;
  font-size: 15rpx;
}